<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>
            <gradient
                android:startColor="#12e212"
                android:endColor="#ffff00"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

            <corners
                android:radius="3dp" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>

            <solid
                android:color="#1F66AB" />            <!-- Thiết lập màu nền cho nút #ef4444-->

            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

            <corners
                android:radius="4dp" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>